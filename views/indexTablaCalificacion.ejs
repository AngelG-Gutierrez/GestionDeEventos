<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Tablas/dashboardtablas.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <title>Pagina de panel de Administracion</title>
</head>

<body action="/indexCalificaciones">

    <!-- Casilla de verificacion -->
    <input type="checkbox" id="checkbox">

    <!-- Inicio del Encabezado -->
    <header class="header">
        <h2 class="u-name">Administradores <b>SonidoShorty</b>
            <label for="checkbox">
                <!-- Iconos de Aplicaciones Font-Awesome -->
                <i id="navbar" class="fa fa-bars" aria-hidden="true"></i>
            </label>
        </h2>
    </header>
    <!-- Fin del Encabezado -->

    <!-- Cuerpo de la página -->
    <div class="body">
        <!-- Barra lateral Izquierda -->
        <nav class="side-bar-left">
            <!-- Imagen del perfil -->
            <div class="user-p">
                <img src="/recursos/LOGOTIPO2.5.png" alt="" class="perfil">
            </div>
            <ul>
                <!-- User -->
                <li>
                    <a href="/indexPerfils">
                        <i class="fa fa-user"></i>
                        <span>Perfil</span>
                    </a>
                </li>
                <!-- Configuracion -->
                <li>
                    <a href="/indexconfig">
                        <i class="fa fa-cog"></i>
                        <span>Configuracion</span>
                    </a>
                </li>
                <!-- Usuarios -->
                <li>
                    <a href="/indexadmin">
                        <i class="fa fa-table"></i>
                        <span>Usuarios</span>
                    </a>
                </li>
                <!-- Eventos -->
                <li>
                    <a href="/indexEventos">
                        <i class="fa fa-table"></i>
                        <span>Eventos</span>
                    </a>
                </li>
                <li>
                    <a href="/indexComentarios">
                        <i class="fa fa-table"></i>
                        <span>Comentarios</span>
                    </a>
                </li>
                <li>
                    <a href="/indexCalificaciones">
                        <i class="fa fa-table"></i>
                        <span>Calificaciones</span>
                    </a>
                </li>
                <!-- Salir -->
                <li>
                    <a href="/logout">
                        <i class="fa fa-power-off"></i>
                        <span>Salir</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Perfil de Usuario dentro de la sección blanca -->
        <section class="seccion-perfil-usuario">
            <div class="perfil-usuario-header">
                <div class="perfil-usuario-portada">
                    <div class="perfil-usuario-avatar">
                        <img src="/recursos/usuario.png" alt="img-avatar">
                    </div>
                </div>
            </div>
            <center>
                <table id="users" class="stripe hover" style="width:100%; padding-top: 1em; padding-bottom: 1em;">
                    <thead>
                        <tr class="bg-indigo-400 bg-opacity-100 text-white">
                            <th data-priority="1">ID DE USUARIO</th>
                            <th data-priority="3">NOMBRE</th>
                            <th data-priority="4">APELLIDOS</th>
                            <th data-priority="5">CORREO</th>
                            <th data-priority="6">CALIFICACION DEL USUARIO</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Aquí se agregarán las filas dinámicamente -->
                    </tbody>
                </table>
            </center>
            <!-- jQuery -->
            <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
            <!-- Datatables -->
            <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
            <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
            <script src="/js/accionesAdministrador.js"></script>

            <script>
                $(document).ready(function () {
                    const url = '/api/calificacionesPanelAdmin';
                    $('#users').DataTable({
                        ajax: {
                            url: url,
                            dataSrc: '',
                        },
                        columns: [
                            { data: "Id_Usuario" },
                            { data: "Nombre_Usuario" },
                            { data: "apellidos_Usuario" },
                            {data: "Correo"},
                            { data: "Calificacion_Usuario",
                                "render": function (data, type, row) {
                                    return data + ' Estrellas';
                                }
                             }
                        ],
                        responsive: true
                    }).columns.adjust().responsive.recalc();
                });
            </script>
</body>
</html>
